---
interface Props {
  url: string;
  name: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split("/").at(-2);
const img = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;

const href = `/pokemons/${name}`;
---

<a
  class:list={[
    `rounded flex flex-col justify-center items-center p-2 mt-5`,
    { border: !isBig },
  ]}
  href={href}
>
  <img
    class:list={[{ "w-26 h-26": isBig, "w-16 h-16": !isBig }]}
    transition:name=`${name}-image`
    src={img}
    alt={name}
  />
  <span class:list={[`capitalize`, { "text-4xl text-blue-300": isBig }]}
    >#{id} {name}</span
  >
</a>
